{% extends 'base.html.twig' %}

{% block title %}Subject{% endblock %}

{% block body %}
<div>
        <a href="{{ path('matiere_index') }}"><i class="fa fa-reply-all" aria-hidden="true"></i>
        back to list</a>

    </div>
    <a href="{{ path('matiere_edit', {'id': matiere.id}) }}">
        <i class="fa fa-pencil" aria-hidden="true">Edit</i>  
    </a>
    {{ include('matiere/_delete_form.html.twig') }}

    <table class="table">
     <thead class="header">
            <tr><th colspan="2" >Detail Subject</th></tr>
        </thead>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matiere.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ matiere.nom }}</td>
            </tr>
           <tr>
                <th>Average</th>
                <td>{{ average }}</td>
            </tr>
            <tr>
                <th>Speaker</th>
                <td>
                {% if matiere.intervenant.nom is not defined %}
                    none
                {% else %}
                    {{ matiere.intervenant.nom }}

                {% endif %}

                </td>
            </tr>
        </tbody>
    </table>
   
   
{% endblock %}
